<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:service-config.properties" ignore-unresolvable="true" />

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="whh-service"  />

    <!-- 注册中心服务地址 -->
    <dubbo:registry id="zookeeper" protocol="zookeeper" address="${dubbo.registry.address}" />

    <!-- 用dubbo协议在30001 -->
    <dubbo:protocol name="dubbo" port="20662" />
    <dubbo:protocol name="hessian" port="9092" />

    <!-- 服务和协议的缺省值配置 -->
    <dubbo:provider group="impl" timeout="${dubbo.provider.timeout}" retries="0"
        connections="${dubbo.provider.connections}"/>

    <!-- 通过注解发布服务 -->
    <dubbo:annotation package="cn.itbat.whh.usercenter.service"/>

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="cn.itbat.whh.taskcenter.service.CmUserTaskService" ref="cmUserService"
                   version="1.0.0.dev" group="impl"/>
    <!-- 具体服务接口的实现 -->
    <bean id="cmUserService" class="cn.itbat.whh.taskcenter.service.impl.CmUserTaskServiceImpl" />

</beans>